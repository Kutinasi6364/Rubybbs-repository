.main-body {
  text-align        : center;
  top               : 64px;
  max-width         : 900px;
  height            : auto;
  background-color  : #f5f8fa;
  margin            : 60px auto;
  padding           : 15px;
}

.header-menu {
  font-size: 15px;
  width: 95%;
  text-align: right;
}

.header-menu li {
  display: inline-block;
  padding-right: 10px;
  list-style-type: none;
}

.header-menu a {
  text-decoration: none;
}

.flash {
  text-align     : center;
  color          : red;
  font-size      : 20px;
}

