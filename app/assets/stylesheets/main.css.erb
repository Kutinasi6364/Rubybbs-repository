.content-show {
  padding         : 10px;
  box-shadow      : 0 2px 6px #c1ced7;
  position        : relative;
  text-align      : left;
}

.content-name {
  font-size    : 12px;
  position     : absolute;
  bottom       : 0px;
  right        : 0px;
}

.input-main {
  height      : 100%;
  padding     : 10px;
  border      : 1px solid rgb(78, 79, 80);
}

.input-main textarea {
  width          : 90%;
  min-height     : 200px;
  max-width      : 100%;
}

.input-area input {
  width             : 50%;
  height            : 30px;
  text-align        : center;
}

.input-area {
  margin-bottom     : 15px;
}

.top-link {
  text-align     : right;
}

.error-message {
  color         : red;
  font-size     : 20px;
}

.button {
  display       : inline-block;
  border-radius : 20%;          /* 角丸       */
  font-size     : 18pt;        /* 文字サイズ */
  text-align    : center;      /* 文字位置   */
  cursor        : pointer;     /* カーソル   */
  background    : #000066;     /* 背景色     */
  color         : #ffffff;     /* 文字色     */
  line-height   : 1em;         /* 1行の高さ  */
  transition    : .3s;         /* なめらか変化 */
  box-shadow    : 9px 9px 3px #666666;  /* 影の設定 */
  border        : 2px solid #000066;    /* 枠の指定 */
}

.button:hover {
  box-shadow    : none;        /* カーソル時の影消去 */
  color         : #000066;     /* 背景色     */
  background    : #ffffff;     /* 文字色     */
}
